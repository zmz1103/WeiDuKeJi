<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.IntegralActivity"
    android:background="#f2f2f2">

    <RelativeLayout
        android:id="@+id/zi"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#f2f2f2"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="14dp">


            <ImageView
                android:id="@+id/back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:padding="3dp"
                android:src="@mipmap/common_nav_btn_back_n" />

            <TextView
                android:id="@+id/biaoti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="积分兑换"
                android:textColor="#000000"
                android:textSize="20sp" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#50666666"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/asd"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_below="@id/zi">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/simpleview"
            android:layout_width="140dp"
            android:layout_height="92dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            app:roundedCornerRadius="8dp"/>

        <TextView
            android:layout_toRightOf="@+id/simpleview"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:textSize="14sp"
            android:textColor="#333333"
            android:text="海外医疗"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginRight="12dp"/>

        <TextView
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="12sp"
            android:text="由于庄家"
            android:layout_below="@id/title"
            android:layout_toRightOf="@+id/simpleview"
            android:layout_marginTop="9dp"
            android:lines="2"
            android:ellipsize="end"
            android:layout_marginRight="12dp"/>

        <TextView
            android:id="@+id/zuozhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="10sp"
            android:text="村夫日记"
            android:layout_below="@id/details"
            android:layout_toRightOf="@+id/simpleview"
            android:layout_marginTop="9dp"
            />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="10sp"
            android:text="1分钟前"
            android:layout_below="@id/zuozhe"
            android:layout_toRightOf="@+id/simpleview"
            android:layout_marginTop="2dp" />

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/details"
            android:layout_marginTop="10dp"
            android:layout_marginRight="12dp">


            <ImageView
                android:layout_marginRight="5dp"
                android:id="@+id/shoucang"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="6dp"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/shoucangshu"
                android:src="@mipmap/common_icon_collect_n" />

            <ImageView
                android:layout_toLeftOf="@id/fenxiangshu"
                android:id="@+id/fenxiang"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="6dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/common_icon_share_n"/>

            <TextView
                android:id="@+id/fenxiangshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="0"
                android:textColor="#999999"
                android:textSize="10sp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/shoucangshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginRight="5dp"
                android:textColor="#999999"
                android:textSize="10sp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/fenxiang"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#e6e3e3"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="#ffffff"
        android:id="@+id/suoxu"
        android:layout_below="@id/asd"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/vbn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textColor="#333333"
            android:textSize="13sp"
            android:text="所需积分："
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_toRightOf="@id/vbn"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#ff5757"
            android:text="10分"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e3e3"
            android:layout_alignParentBottom="true"/>


    </RelativeLayout>

    <RelativeLayout
        android:background="#ffffff"
        android:layout_below="@id/suoxu"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/zxc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textColor="#333333"
            android:textSize="13sp"
            android:text="我的积分："
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_toRightOf="@id/zxc"
            android:layout_centerVertical="true"
            android:id="@+id/myjifen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#ff5757"
            android:text="120分"/>



    </RelativeLayout>

    <Button
        android:id="@+id/duihuan"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/yuanjiaored8"
        android:text="立即兑换"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textSize="20sp"
        android:textColor="#ffffff"/>





</RelativeLayout>