<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/pop_bg_circle"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="30dp"
            android:text="选择付费方式"
            android:textColor="#666666"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/vvvv"
            android:layout_below="@id/details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginLeft="12dp"
            android:text="让阅读随时随地"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"/>
        <ImageView
            android:id="@+id/backgb"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="35dp"
            android:padding="5dp"
            android:src="@mipmap/cancel_buttom"
            android:layout_marginRight="12dp"/>

        <RelativeLayout
            android:id="@+id/integral"
            android:layout_below="@id/vvvv"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@mipmap/chengse"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/fangshi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分兑换"
                    android:textSize="16sp"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/english"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Integral purchase"
                    android:textSize="10sp"
                    android:textColor="#ffffff"
                    android:layout_below="@id/fangshi"
                    android:layout_marginTop="10dp"/>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/english"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="@drawable/yuan">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/payment_method_icon_integration_n" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/say"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购买说明："
                    android:textColor="#ffffff"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/say"
                    android:text="只需一次性付费即可对该条资讯永久免费阅读"

                    android:textSize="10sp"
                    android:textColor="#ffffff"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击兑换>>"
                    android:textSize="14sp"
                    android:textColor="#ffffff"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true" />


            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/vip"
            android:layout_below="@id/integral"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@mipmap/lvse"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/fangshi1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开通会员"
                    android:textSize="16sp"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/english1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="membership purchase"
                    android:textSize="10sp"
                    android:textColor="#ffffff"
                    android:layout_below="@id/fangshi1"
                    android:layout_marginTop="10dp"/>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/english1"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="@drawable/yuan">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/payment_method_icon_vip_n" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/say1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="会员说明："
                    android:textColor="#ffffff"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/say1"
                    android:text="会员可以免费阅读所有付费资讯"

                    android:textSize="10sp"
                    android:textColor="#ffffff"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击开通>>"
                    android:textSize="14sp"
                    android:textColor="#ffffff"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true" />


            </RelativeLayout>




        </RelativeLayout>





    </RelativeLayout>


</RelativeLayout>



