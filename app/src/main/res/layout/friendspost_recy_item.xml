<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <jaydenxiao.com.expandabletextview.ExpandableTextView
            android:id="@+id/friendspost_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:collapseExpandTextColor="#20affa"
            app:contentTextColor="#666666"
            app:contentTextSize="12sp"
            app:maxCollapsedLines="2"
            app:textCollapse="@string/collapse"
            app:textExpand="@string/expand"/>
        <com.wd.tech.view.RecyclerGridView
            android:id="@+id/friendspost_grid_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/friendspost_comment"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/common_icon_comment_n"/>
            <TextView
                android:id="@+id/friendspost_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginLeft="6dp"
                android:text="234"/>
            <ImageView
                android:id="@+id/friendspost_praise"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="40dp"
                android:src="@mipmap/common_icon_prise_n"/>
            <TextView
                android:id="@+id/friendspost_praise_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_marginLeft="6dp"
                android:text="234"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_linear"
            android:layout_marginTop="10dp">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/friendspost_recy"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/friendspost_pl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="快来评论呀~" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>