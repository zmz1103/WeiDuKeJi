<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66dddddd">

    <RelativeLayout
        android:id="@+id/bj"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/create_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:padding="4dp"
            android:src="@mipmap/common_nav_btn_back_n" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:text="创建群聊"
            android:textColor="@color/colorText"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:id="@+id/xian"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/bj"
        android:background="#22666666"/>

    <ImageView
        android:id="@+id/group_headpic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xian"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/group_head"/>

    <EditText
        android:id="@+id/group_name"
        android:layout_width="184dp"
        android:layout_height="40dp"
        android:hint="填写群名称(2-20汉字)"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:maxLines="1"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/group_headpic"
        android:background="@drawable/edi_group_name"/>

    <EditText
        android:id="@+id/group_introduce"
        android:layout_width="336dp"
        android:layout_height="119dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="top"
        android:paddingTop="12dp"
        android:paddingLeft="10dp"
        android:textColor="#666666"
        android:textSize="12dp"
        android:maxLength="100"
        android:hint="介绍下你的群，让更多朋友加群"
        android:background="@drawable/edi_group_introduce"
        android:layout_below="@+id/group_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100字以内"
        android:textColor="@color/colorText"
        android:layout_margin="10dp"
        android:textSize="10sp"
        android:layout_alignBottom="@+id/group_introduce"
        android:layout_alignRight="@+id/group_introduce"/>
    <Button
        android:id="@+id/establish"
        android:layout_width="336dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/add_frient"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:text="创建"
        android:textSize="20sp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="40dp"/>

</RelativeLayout>