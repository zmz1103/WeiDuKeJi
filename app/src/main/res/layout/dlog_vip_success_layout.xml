<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="224dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dlog_shape"
    >
   <ImageView
       android:id="@+id/img_close"
       android:layout_width="24dp"
       android:layout_height="24dp"
       android:layout_marginLeft="12dp"
       android:layout_marginTop="8dp"
       android:src="@mipmap/common_btn_close_n"
       />
   <TextView
       android:id="@+id/dlog_title"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="14sp"
       android:textColor="#000000"
       android:layout_marginTop="10dp"
       android:layout_centerHorizontal="true"
       android:text="购买成功"
       />

     <View
        android:id="@+id/view1"
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="#666666"
         android:layout_below="@id/img_close"
         android:layout_marginTop="8dp"
        />
    <TextView
        android:id="@+id/dlog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您已成功购买会员,会员期间可以免费阅读所有付费资讯"
        android:layout_below="@id/view1"
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        />

   <Button
       android:layout_width="200dp"
       android:layout_height="26dp"
       android:layout_below="@id/dlog_content"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="20dp"
       android:layout_centerHorizontal="true"
       android:background="@drawable/dlog_btn__shape"
       android:text="继续阅读"

       />


</RelativeLayout>
