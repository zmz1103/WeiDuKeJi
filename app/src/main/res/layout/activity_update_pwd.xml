<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/settting_linear_01"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#f2f2f2"
        android:gravity="center_vertical"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/my_back_u_pwd"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="15dp"
            android:padding="4dp"
            android:src="@mipmap/common_nav_btn_back_n" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="重设密码"
            android:textColor="#666656"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:id="@+id/settting_view_01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/settting_linear_01"
        android:background="#ececec" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="24dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前密码"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/te_number"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="#999999"
                android:textColorHint="#fff"
                android:textSize="14sp" />

        </RelativeLayout>

        <View
            android:layout_width="272dp"
            android:layout_height="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="#f2f2f2" />

        <RelativeLayout
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重设密码为"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/pwd_01"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="#999999"
                android:textColorHint="#fff"
                android:textSize="14sp" />

        </RelativeLayout>

        <View
            android:layout_width="272dp"
            android:layout_height="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="#f2f2f2" />

        <RelativeLayout
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请再次输入密码"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/pwd_02"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:singleLine="true"
                android:textColor="#999999"
                android:textColorHint="#fff"
                android:textSize="14sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/upw_btn"
            android:layout_width="66dp"
            android:layout_height="28dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="200dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/task_qd_n"
            android:text="确认修改"
            android:textColor="#fff"
            android:textSize="14sp" />
    </LinearLayout>


</LinearLayout>