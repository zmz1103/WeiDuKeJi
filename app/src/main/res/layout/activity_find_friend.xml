<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd">

    <RelativeLayout
        android:id="@+id/seach"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <EditText
            android:id="@+id/find_search_friend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:singleLine="true"
            android:hint="请输入手机号…"
            android:paddingLeft="50dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/color_Text"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignLeft="@+id/search_friend"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/common_nav_btn_search_n" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/show_friend"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@+id/seach"
        android:layout_marginTop="4dp"
        android:background="@color/white">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/friend_head"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/search_friend_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/friend_head"
            android:text="啊哈"
            android:textColor="@color/color_Text"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/datum"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:padding="5dp"
            android:src="@mipmap/my_icon_next_n" />

    </RelativeLayout>

    <TextView
        android:id="@+id/fruitless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seach"
        android:layout_marginTop="30dp"
        android:text="搜索无结果"
        android:layout_centerHorizontal="true"
        android:textColor="@color/TextTure"
        android:textSize="14sp" />

</RelativeLayout>