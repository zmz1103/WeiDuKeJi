<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd">

    <RelativeLayout
        android:id="@+id/bj"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/add_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="15dp"
            android:padding="4dp"
            android:src="@mipmap/common_nav_btn_back_n" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_Text"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_below="@+id/bj"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/find_friend"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorText"
                android:layout_centerInParent="true"
                android:text="找人"/>

            <TextView
                android:id="@+id/add_friend_text"
                android:layout_width="36dp"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/TextTure" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/add_flock"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorText"
                android:layout_centerInParent="true"
                android:text="找群"/>

            <TextView
                android:id="@+id/add_flock_text"
                android:layout_width="36dp"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/add_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tab">

    </android.support.v4.view.ViewPager>


</RelativeLayout>