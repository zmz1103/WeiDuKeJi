<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddFriendsActivity"
    android:orientation="vertical"
    android:background="#f1efef">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/add_group_back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:src="@mipmap/common_icon_back_n"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/colorTextS"
            android:layout_marginTop="37dp"
            android:layout_height="wrap_content"
            android:text="申请加群"/>
        <TextView
            android:id="@+id/add_group_send"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/colorTextS"
            android:layout_height="wrap_content"
            android:text="发送"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e4e1e1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorTextS"
        android:text="备注信息"
        android:layout_marginTop="28dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/apply_intro"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:paddingTop="15dp"
            android:maxLength="30"
            android:textSize="14sp"
            android:paddingLeft="12dp"
            android:background="#fff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_alignBottom="@+id/apply_intro"
            android:layout_alignRight="@+id/apply_intro"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorText"

            android:text="30字"/>
    </RelativeLayout>

</LinearLayout>