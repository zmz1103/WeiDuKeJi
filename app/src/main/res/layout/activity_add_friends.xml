<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddFriendsActivity"
    android:orientation="vertical"
    android:background="#f1efef">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#fff"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/addfriends_back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:src="@mipmap/common_icon_back_n"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="37dp"
            android:layout_height="wrap_content"
            android:text="添加好友"/>
        <TextView
            android:id="@+id/addfriends_send"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="发送"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e4e1e1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/addfriends_headpic"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginLeft="12dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">
            <TextView
                android:id="@+id/addfriends_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="18sp"
                android:textColor="#333333"
                android:gravity="bottom"/>
            <TextView
                android:id="@+id/addfriends_signature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textColor="#666666"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="申请备注"
        android:layout_marginTop="28dp"/>
    <EditText
        android:id="@+id/et_remark"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="12dp"
        android:background="#fff"/>


</LinearLayout>