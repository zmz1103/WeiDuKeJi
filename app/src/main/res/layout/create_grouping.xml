<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/grouping"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="添加分组"
        android:textColor="@color/color_Text"
        android:textSize="20sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textColor="@color/color_Text"
        android:text="请输入新的分组名称"/>
    <EditText
        android:id="@+id/new_groups_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:maxLines="1"
        android:textColor="@color/color_Text"
        android:layout_gravity="center"
        android:hint="请输入分组名"
        android:textSize="16dp"
        android:background="@drawable/edi_grouping"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/new_groups_cancel"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:background="@drawable/text_grouping"
            android:textColor="@color/color_Text"
            android:layout_height="match_parent"
            android:text="取消"/>
        <TextView
            android:id="@+id/new_groups_confirm"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:background="@drawable/text_grouping"
            android:textColor="@color/color_Text"
            android:layout_height="match_parent"
            android:text="确定"/>

    </LinearLayout>

</LinearLayout>



