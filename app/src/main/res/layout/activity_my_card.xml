<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.myactivity.MyCardActivity">
    <RelativeLayout
        android:id="@+id/settting_linea1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#f2f2f2"
        android:gravity="center_vertical"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/my_back_gz"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="15dp"
            android:padding="4dp"
            android:src="@mipmap/common_nav_btn_back_n" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="我的帖子"
            android:textColor="#666656"
            android:textSize="20sp" />

    </RelativeLayout>

    <View
        android:id="@+id/settting_view_01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/settting_linea1"
        android:background="#ececec" />
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/my_card_layout"
        android:layout_width="match_parent"
        android:layout_below="@+id/settting_linea1"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_card_rec"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</RelativeLayout>