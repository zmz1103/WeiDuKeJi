<?xml version="1.0" encoding="utf-8"?>
<com.wd.tech.view.RecyclerItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="76dp">

        <LinearLayout
            android:id="@+id/slide"
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:background="#f00"
            android:layout_toRightOf="@id/layout_left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/delete"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#fff"
                android:text="取消关注" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_left"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:background="#fff"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/atten_item_sim"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="18dp"
                fresco:roundAsCircle="true" />

            <LinearLayout
                android:id="@+id/sea1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                    <TextView
                        android:id="@+id/atten_item_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="18dp"
                        android:layout_weight="1"
                        android:text="android开发交流群"
                        android:textColor="#666"
                        android:textSize="14sp" />





                <TextView
                    android:id="@+id/atten_item_qm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/atten_item_title"

                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5.5dp"
                    android:text="广州-悠悠哉：RecyclerView很容易"
                    android:textColor="#999"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/settting_view_01"
            android:layout_width="360dp"
            android:layout_alignParentBottom="true"
            android:layout_height="1.5dp"
            android:background="#ececec" />
    </RelativeLayout>


</com.wd.tech.view.RecyclerItemView>