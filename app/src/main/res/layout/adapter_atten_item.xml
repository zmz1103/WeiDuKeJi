<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <RelativeLayout


        android:id="@+id/sea1"
        android:layout_width="match_parent"

        android:layout_height="76dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/atten_item_sim"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="18dp"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/atten_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/atten_item_sim"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:textColor="#666666"
            android:textSize="14sp"
            android:text="1111111"/>

        <TextView
            android:id="@+id/atten_item_qm"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/atten_item_sim"
            android:textSize="10sp"
            android:textColor="#999"
            android:text="11111"
            android:layout_below="@id/atten_item_title"
            android:layout_marginTop="8dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/settting_view_01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/sea1"
        android:background="#ececec" />
</RelativeLayout>