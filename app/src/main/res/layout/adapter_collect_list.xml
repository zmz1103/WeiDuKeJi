<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="112dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/collect_ite_simpleview"
        android:layout_width="140dp"
        android:layout_height="92dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        fresco:roundedCornerRadius="8dp" />

    <TextView
        android:id="@+id/co_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/collect_ite_simpleview"
        android:ellipsize="end"
        android:lines="1"
        android:text="海外医疗"
        android:textColor="#333333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/co_item_zuozhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/co_item_title"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/collect_ite_simpleview"
        android:text="村夫日记"
        android:textColor="#999999"
        android:textSize="10sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#e6e3e3" />


</RelativeLayout>