<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#22dddddd">




    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/group_background"
        android:layout_width="match_parent"
        android:layout_height="240dp" />
    <ImageView
        android:id="@+id/group_apply_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="36dp"
        android:src="@mipmap/common_nav_btn_back_n" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/group_head"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_alignRight="@+id/group_background"
        android:layout_alignBottom="@+id/group_background"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="-15dp"
        fresco:roundedCornerRadius="7dp"
        fresco:roundingBorderColor="@color/white"
        fresco:roundingBorderWidth="2dp" />

    <TextView
        android:id="@+id/group_apply_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/group_background"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/group_head"
        android:text="呃呃呃"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/group_members"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/group_background"
        android:layout_marginTop="33dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="群成员"
            android:layout_alignParentLeft="true"
            android:textColor="@color/colorText"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/group_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="共5人"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorText"
            android:textSize="14sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#22666666"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:background="@color/white"
        android:layout_below="@+id/group_members">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="12dp"
            android:text="群简介"
            android:layout_alignParentLeft="true"
            android:textColor="@color/colorText"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/group_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="12dp"
            android:text="群简介"
            android:layout_alignParentLeft="true"
            android:textColor="@color/colorText"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:textSize="12sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/apply_group"
        android:layout_width="336dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/add_frient"
        android:layout_marginLeft="10dp"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:text="申请入群"
        android:textSize="20sp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="40dp"/>

</RelativeLayout>